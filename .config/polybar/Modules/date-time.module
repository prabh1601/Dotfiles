[module/date]

type = internal/date
interval = 1 

date = %a, %d %b
label = %date%
label-font = 6
label-foreground = ${colors.light-blue}

format = %{A1:dunstify "Hello World" "This is a Test Notification":} %{A} <label>
format-foreground = ${colors.light-purple}
format-background = ${colors.bg-alt}
format-padding = 1

[module/time]
type = internal/date
interval = 1 

time = %H : %M : %S
label = %time%
label-font = 6
label-foreground = ${colors.light-blue}

format =   <label> 
format-foreground = ${colors.light-purple}
format-background = ${colors.bg-alt}
format-padding = 1

