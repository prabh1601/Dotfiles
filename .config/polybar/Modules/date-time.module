[module/date]

type = internal/date
interval = 1 

date = %a, %d %b

label = %{T7}%date%%{T-}
label-foreground = ${colors.light-blue}

format = %{A1:dunstify "hello world":} %{A} <label>
format-foreground = ${colors.light-purple}
format-background = ${colors.bg-alt}
format-padding = 1

[module/time]
type = internal/date
interval = 1 

time = %H : %M : %S

label = %{T7}%time%%{T-}
label-foreground = ${colors.light-blue}

format =   <label> 
format-foreground = ${colors.light-purple}
format-background = ${colors.bg-alt}
format-padding = 1

